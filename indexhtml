  <script>
    (function(){
      const form = document.getElementById('contactForm');
      const status = document.getElementById('formStatus');
      const toggle = document.getElementById('togglePwd');
      const pwd = document.getElementById('password');

      toggle.addEventListener('click', ()=>{
        if(pwd.type === 'password'){pwd.type='text'; toggle.textContent='Hide'} else {pwd.type='password'; toggle.textContent='Show'}
      });

      function showError(id, msg){
        const el = document.getElementById('err-'+id);
        if(el) el.textContent = msg;
      }
      function clearErrors(){
        ['firstName','lastName','email'].forEach(k=>showError(k,''));
        status.textContent=''; status.className='';
      }

      form.addEventListener('submit',(e)=>{
        e.preventDefault(); clearErrors();
        const f = new FormData(form);
        let valid = true;
        if(!f.get('firstName') || f.get('firstName').trim().length < 2){ valid=false; showError('firstName','Please enter your first name'); }
        if(!f.get('lastName') || f.get('lastName').trim().length < 1){ valid=false; showError('lastName','Please enter your last name'); }
        const email = f.get('email');
        if(!email || !/^\S+@\S+\.\S+$/.test(email)){ valid=false; showError('email','Please enter a valid email'); }

        if(!valid){ status.textContent = 'Please fix the errors above.'; status.className='error'; return; }

        // fake submit (replace with real fetch to send data to your server)
        status.textContent = 'Sending...';
        setTimeout(()=>{
          status.textContent = 'Thanks — your message has been sent!'; status.className='success';
          form.reset();
        },800);
      });

    })();
  </script>
